PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000

# Frontend URL (for OAuth callbacks, email links, etc.)
FRONTEND_URL=http://localhost:3000

# OpenAI API key (required for conversation endpoint and memory embeddings)
OPENAI_API_KEY=

# Gemini API key (optional, for alternative chat provider)
GEMINI_API_KEY=

# Default chat provider (openai|gemini). Falls back to openai.
LLM_CHAT_PROVIDER=openai

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute
# Alternatively specify milliseconds
# RATE_LIMIT_TIME_WINDOW_MS=60000

# Database connection (PostgreSQL)
# Option 1: Direct PostgreSQL URL
POSTGRES_URL=postgresql://postgres:password@localhost:5432/fluentgym
# Option 2: Supabase connection
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_DB_PASSWORD=your-db-password-here

# JWT Authentication (optional - if enabled, requires Supabase JWT)
# SUPABASE_JWT_SECRET=your-jwt-secret-here
# SUPABASE_ANON_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# LiveKit (for real-time audio/video)
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_TOKEN_RATE_LIMIT_MAX=5
LIVEKIT_TOKEN_RATE_LIMIT_WINDOW=1 minute
# Optional: gateway key to protect the LiveKit token endpoint
LIVEKIT_TOKEN_GATEWAY_KEY=

# Google Calendar Integration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stripe Payment Integration (optional)
STRIPE_SECRET_KEY=

# Cloudinary (for file storage - optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Ready Player Me (3D avatars)
READY_PLAYER_ME_SUBDOMAIN=fluentgym

# Email Service (for transactional emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@fluentgym.com

# Redis (for Bull job queues - optional)
REDIS_URL=redis://localhost:6379
